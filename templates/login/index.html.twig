{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Connexion</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="my-5">
            <label for="username">Votre Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="example@domaine.com" required>

            <label for="password">Votre Mot de Pass:</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="**********" required>

            <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

            <button type="submit" class="btn btn-success">Connecter</button>
            <br>
            <a href="{{ path('app_register') }}">M'inscrire</a>
        </form>
    </div>

{% endblock %}
